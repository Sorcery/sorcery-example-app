<%= form_with url: user_sessions_path, method: :post, local: true do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
  <div>
    <%= f.label "keep me logged in" %><br />
    <%= f.check_box :remember %>
  </div>
<% end %>
